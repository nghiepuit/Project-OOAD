@model QuanLyLinhKienMayTinh.Web.Infrastructure.Core.PaginationSet<QuanLyLinhKienMayTinh.Entities.SanPham>
@{
    ViewBag.Title = "LaySanPhamTheoDanhMuc";
    var sort = Request["sort"];
    var nsx = Request["nsx"];
    var LoaiSanPham = ViewBag.LoaiSanPham as QuanLyLinhKienMayTinh.Entities.LoaiSanPham;
}

<section class="page-header">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="trang-chu.html">Trang Chủ</a></li>
            <li class="active">
                @LoaiSanPham.Ten
            </li>
        </ul>
    </div>
</section>
<div class="container main-container">
    <div class="wrapper-container">
        <div class="container">
            @if (Model.Count > 0)
            {
                <div class="row">
                    <div class="col-md-9 col-md-push-3">
                        <div class="toolbar mb-none">
                            <h3>@LoaiSanPham.Ten - <span>@Model.TotalCount sản phẩm</span></h3>
                            <div class="sorter">
                                <form method="GET" name="frmSelect">
                                    <input type="hidden" name="page" value="@Model.PageIndex" />
                                    <input type="hidden" name="nsx" value="@nsx" />
                                    <div class="sort-by">
                                        <label>Sắp xếp theo:</label>
                                        <select name="sort" onchange="frmSelect.submit()">
                                            <option value="pho-bien" selected>Phổ Biến</option>
                                            <option value="gia-tang" @( sort == "gia-tang" ? "selected" : "" )>Giá Tăng Dần</option>
                                            <option value="gia-giam" @( sort == "gia-giam" ? "selected" : "" )>Giá Giảm Dần</option>
                                        </select>
                                    </div>
                                </form>
                                <ul class="pagination">
                                    @if (Model.TotalPages > 1)
                                    {
                                        var startPageIndex = Math.Max(1, Model.PageIndex - Model.MaxPage / 2);
                                        var endPageIndex = Math.Min(Model.TotalPages, Model.PageIndex + Model.MaxPage / 2);
                                        if (Model.PageIndex > 1)
                                        {
                                            if (!String.IsNullOrEmpty(sort))
                                            {
                                                <li><a href="?page=1&sort=@sort"><i class="fa fa-angle-double-left"></i></a></li>
                                                <li><a href="?page=@(Model.PageIndex-1)&sort=@sort"><i class="fa fa-caret-left"></i></a></li>
                                            }
                                            else
                                            {
                                                <li><a href="?page=1"><i class="fa fa-angle-double-left"></i></a></li>
                                                <li><a href="?page=@(Model.PageIndex-1)"><i class="fa fa-caret-left"></i></a></li>
                                            }
                                        }
                                        for (int i = startPageIndex; i <= endPageIndex; i++)
                                        {
                                            if (Model.PageIndex == i)
                                            {
                                                if (!String.IsNullOrEmpty(sort))
                                                {
                                                    <li class="active"><a href="?page=@i&sort=@sort" title="Trang @i">@i</a></li>
                                                }
                                                else
                                                {
                                                    <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                                                }
                                            }
                                            else
                                            {
                                                if (!String.IsNullOrEmpty(sort))
                                                {
                                                    <li><a href="?page=@i&sort=@sort" title="Trang @i">@i</a></li>
                                                }
                                                else
                                                {
                                                    <li><a href="?page=@i" title="Trang @i">@i</a></li>
                                                }
                                            }
                                        }
                                        if (Model.PageIndex < Model.TotalPages)
                                        {
                                            if (!String.IsNullOrEmpty(sort))
                                            {
                                                <li><a href="?page=@(Model.PageIndex+1)&sort=@sort"><i class="fa fa-caret-right"></i></a></li>
                                                <li><a href="?page=@Model.TotalPages&sort=@sort"><i class="fa fa-angle-double-right"></i></a></li>
                                            }
                                            else
                                            {
                                                <li><a href="?page=@(Model.PageIndex+1)"><i class="fa fa-caret-right"></i></a></li>
                                                <li><a href="?page=@Model.TotalPages"><i class="fa fa-angle-double-right"></i></a></li>
                                            }
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                        <ul class="products-grid columns3">
                            @foreach (var product in Model.Items)
                            {
                                var url = "/" + product.Ten + ".p-" + product.MaSP + ".html";
                                <li>
                                    <div class="product">
                                        <figure class="product-image-area">
                                            <a href="@url" title="@product.Ten" class="product-image">
                                                <img src="~/Assets/images/SanPham/@product.HinhAnh" alt="@product.Ten">
                                                <img src="~/Assets/images/SanPham/@product.HinhAnh" alt="@product.Ten" class="product-hover-image">
                                            </a>
                                            <a href="#" class="product-quickview">
                                                <i class="fa fa-share-square-o"></i>
                                                <span>Quick View</span>
                                            </a>
                                        </figure>
                                        <div class="product-details-area">
                                            <h2 class="product-name"><a href="@url" title="@product.Ten">@product.Ten</a></h2>
                                            <div class="product-ratings">
                                                <div class="ratings-box">
                                                    <div class="rating" style="width:60%"></div>
                                                </div>
                                            </div>
                                            <div class="product-price-box">
                                                <span class="product-price">@product.DonGia.ToString("N0") đ</span>
                                            </div>
                                            <div class="product-actions">
                                                <a href="#" class="addtowishlist" title="Add to Wishlist">
                                                    <i class="fa fa-heart"></i>
                                                </a>
                                                <a href="javascript:" class="addtocart btnAddToCart" title="Thêm Vào Giỏ Hàng" data-id="@product.MaSP">
                                                    <i class="fa fa-shopping-cart"></i>
                                                    <span>Thêm Vào Giỏ Hàng</span>
                                                </a>
                                                <a href="#" class="comparelink" title="Add to Compare">
                                                    <i class="glyphicon glyphicon-signal"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="toolbar-bottom">
                            <div class="toolbar">
                                <div class="sorter">
                                    <ul class="pagination">
                                        @if (Model.TotalPages > 1)
                                        {
                                            var startPageIndex = Math.Max(1, Model.PageIndex - Model.MaxPage / 2);
                                            var endPageIndex = Math.Min(Model.TotalPages, Model.PageIndex + Model.MaxPage / 2);
                                            if (Model.PageIndex > 1)
                                            {
                                                if (!String.IsNullOrEmpty(sort))
