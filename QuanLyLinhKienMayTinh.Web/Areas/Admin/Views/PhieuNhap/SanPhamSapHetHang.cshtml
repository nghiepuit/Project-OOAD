@model IEnumerable<QuanLyLinhKienMayTinh.Entities.SanPham>

@{
    ViewBag.Title = "SanPhamSapHetHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    div.product img {
        height: 150px;
        max-width: 96%;
    }
</style>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">


        @if (Model.Count() < 1)
        {
            <h1 class="alert alert-warning">Không còn sản phẩm nào hết hàng</h1>
        }
        else
        {
            <h1 class="primary-text">Sản Phẩm Sắp Hết Hàng</h1>
        }
        
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card product">
                    <div class="card-header deep-orange lighten-1 white-text">
                        @item.Ten
                    </div>
                    <div class="card-body text-center">
                        <a title="@item.Ten" href="product/detail/@item.MaSP">
                            <img alt="@item.Ten"
                                 title="@item.Ten"
                                 src="~/Assets/images/products/@item.HinhAnh" />
                        </a>
                    </div>
                    <div class="card-footer text-muted success-color white-text">
                        <a href="/Admin/PhieuNhap/NhapHangDon/@item.MaSP" class="btn btn-purple"><i class="fa fa-plus pr-2" aria-hidden="true"></i>Nhập Hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section ClientScripts
{ 

}